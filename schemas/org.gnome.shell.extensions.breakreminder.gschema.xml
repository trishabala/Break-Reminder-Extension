<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.breakreminder" path="/org/gnome/shell/extensions/breakreminder/">
    <key name="interval-minutes" type="i">
      <default>15</default>
      <summary>Break reminder interval in minutes</summary>
      <description>How many minutes between break reminders</description>
      <range min="0" max="120"/>
    </key>
    <key name="interval-seconds" type="i">
      <default>0</default>
      <summary>Break reminder interval in seconds</summary>
      <description>Additional seconds to add to the break reminder interval</description>
      <range min="0" max="59"/>
    </key>
  </schema>
</schemalist>